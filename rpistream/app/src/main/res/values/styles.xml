<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorIconText</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
    </style>

    <style name="form_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="form_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.67</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>